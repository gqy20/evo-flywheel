# Evo-Flywheel 环境变量配置
# 复制此文件为 .env 并填入实际值

# 数据库配置
DATABASE_URL=sqlite:///evo_flywheel.db

# Chroma 向量数据库配置
CHROMA_PERSIST_DIR=./chroma_db

# 智谱 AI API 密钥 (必填)
# 获取地址: https://open.bigmodel.cn/usercenter/apikeys
ZHIPU_API_KEY=your-zhipu-api-key-here

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# RSS 源配置文件路径
RSS_SOURCES_PATH=config/sources.yaml

# 报告输出目录
REPORTS_DIR=reports
